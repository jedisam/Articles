extends layout

block content
    h1 #{title}
    form(method="POST",action="/article/add")
        #form-group
            label Title: 
            input.form-control(name='title',type='text' )
        #form-group
            label Your Article: 
            textarea.form-control(name="body", cols="30", rows="10" )
            br
        input.btn.btn-primary.form-control(type="submit")
